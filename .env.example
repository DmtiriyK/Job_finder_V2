# Job Finder - Environment Configuration Template
# Copy this file to .env and fill in your actual credentials

# Google Sheets API Configuration
# See docs/GOOGLE_SHEETS_SETUP.md for setup instructions
GOOGLE_SHEETS_CREDENTIALS_PATH=./config/google_credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# NLP Mode
# Set to 'true' to enable advanced spaCy NER (local development only, slower)
# Set to 'false' for lightweight mode (GitHub Actions, fast)
USE_ADVANCED_NLP=false

# Scraper Configuration
SCRAPER_TIMEOUT_SECONDS=30
SCRAPER_MAX_RETRIES=3
SCRAPER_RATE_LIMIT_DELAY=2  # seconds between requests

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_HOURS=24

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/scraper.log

# Results Configuration
MAX_RESULTS=20  # Top N jobs to save to Google Sheets
MIN_SCORE=60    # Minimum score threshold for results

# Development Mode (skip actual scraping, use mock data)
DEV_MODE=false
